---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://filmclub.tech/",
    description: "Rolleston College Film Club Website",
    icon: "mdi:home",
  },
  {
    url: "https://github.com/rollestoncollege",
    description: "Rolleston College Github",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://rollestoncollege.nz",
    description: "Rolleston College Website",
    icon: "fa-solid:globe",
  },

];
---

<footer class="relative flex h-64 items-center justify-center">

  <p class="absolute inset-0 overflow-hidden opacity-40">
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-3">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
  <br>

</footer>
